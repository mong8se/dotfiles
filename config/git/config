# vim: ft=gitconfig
[color]
  ui = auto
[color "branch"]
  current = blue reverse
  local   = blue
  remote  = green
  upstream = green ul
[color "status"]
  header    = normal
  added     = green reverse
  changed   = blue
  untracked = black
  branch    = blue ul
  nobranch  = red ul
[column]
  ui = auto
[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf     = input
[user]
  name  = Steven Moazami
  email = steven@mostlyheroes.com
[mergetool]
  prompt = true
[difftool]
  prompt = true
[pager]
  difftool = true
[alias]
  fes = "!sh -c 'git status --porcelain | awk '\"'\"'$1==\"'$1'\"{print $2}'\"'\""
  icd = "difftool -t icdiff -y"
  cln = "!find . -name \\*.orig -print -delete"
  co  = "!git branch | cut -c 3- | fzf +m | xargs git checkout"
  cor = "!git branch -r | cut -c 3- | fzf +m | xargs git checkout"
  vi  = "!git ls-files | fzf -m | xargs -o nvim"
  af  = "!git ls-files -m | fzf -m | xargs git add"
[push]
  ; New default for Git 2.0 and newer, only push the current local branch, and only if its name matches the upstream
  default = simple
[difftool "icdiff"]
  cmd = "icdiff --line-numbers \"$LOCAL\" \"$REMOTE\""
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[help]
  autocorrect = 10
[include]
  path = config.mac
  path = config.local
