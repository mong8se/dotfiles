[color]
  ui = auto
[color "branch"]
  current = blue reverse
  local   = blue
  remote  = green
[color "status"]
  header    = normal
  added     = green reverse
  changed   = blue
  untracked = red
  nobranch  = red ul
[column]
  ui = auto
[core]
  excludesfile = ~/.config/git/ignore
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf     = input
[user]
  name  = Steven Moazami
  email = steven@mostlyheroes.com
[merge]
  tool = opendiff
[mergetool]
  prompt = true
[difftool]
  prompt = true
[alias]
  sdo ="!sh -c 'git status --porcelain | awk $1==\"'"
[push]
  ; New default for Git 2.0 and newer, only push the current local branch, and only if its name matches the upstream
  default = simple
[include]
  path = ~/.config/git/config.mac
  path = ~/.config/git/config.local
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[help]
	autocorrect = 15
