# vim: ft=gitconfig
[color]
  ui = auto
[color "branch"]
  current = blue reverse
  local   = blue
  remote  = green
  upstream = green ul
[color "status"]
  header    = normal
  added     = green reverse
  changed   = blue
  untracked = white dim
  branch    = blue ul
  nobranch  = red ul
[column]
  ui = auto
[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf     = input
  excludesfile = ~/.config/git/ignore
[user]
  name  = Steven Moazami
  email = mong8se@users.noreply.github.com
[mergetool]
  prompt = true
  keepBackup = false
[difftool]
  prompt = true
[pager]
  difftool = true
[alias]
  fes = "!sh -c 'git status --porcelain | awk '\"'\"'$1==\"'$1'\"{print $2}'\"'\""
  icd = "difftool -t icdiff -y"
  co  = "!git branch --all | cut -c 3- | fzy | xargs git checkout"
  vi  = "!git ls-files $1 | fzy | xargs -o \"$EDITOR\""
  af  = "!git ls-files -m | fzy | xargs git add"
  fzf = "!git ls-files | fzy | xargs git $1"
[push]
  ; New default for Git 2.0 and newer, only push the current local branch, and only if its name matches the upstream
  default = simple
[difftool "icdiff"]
  cmd = "icdiff --line-numbers \"$LOCAL\" \"$REMOTE\""
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[help]
  autocorrect = 10
[include]
  path = config.mac
  path = config.local
